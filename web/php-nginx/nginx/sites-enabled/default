server {
    listen       80;
    server_name  abc;
    root   /www;

    #charset koi8-r;

    location / {
        access_log off;
        index  index.html index.htm index.php;
        try_files $uri $uri/ /index.php;
    }

    #设置缓存
    location ~* .(ico|jpg|jpeg|png|gif|css|js|woff)$ {
        expires 7d;
    }

    #error_page  404              /404.html;

    # redirect server error pages to the static page /50x.html
    #
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    # proxy the PHP scripts to Apache listening on 127.0.0.1:80
    #
    #location ~ \.php$ {
    #    proxy_pass   http://127.0.0.1;
    #}

    # pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
    #
    location ~ \.php$ {
        root           /www;
        #fastcgi_pass   127.0.0.1:9000;
        fastcgi_pass   unix:/var/run/php72-fpm.sock;
        fastcgi_index  index.php;
        fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include        fastcgi_params;
    }

    # deny access to .htaccess files, if Apache's document root
    # concurs with nginx's one
    #
    #location ~ /\.ht {
    #    deny  all;
    #}
    error_log /var/log/nginx/tiango.error.log warn;
    access_log  /var/log/nginx/abc.access.log upstream_time buffer=32k flush=5s if=$logme;
}
